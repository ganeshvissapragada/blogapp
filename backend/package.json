{
  "name": "blogapp-backend",
  "version": "1.0.0",
  "description": "Node.js backend for BlogApp with MySQL integration",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --testEnvironment=node",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --testEnvironment=node --watch"
  },
  "jest": {
    "preset": "node",
    "extensionsToTreatAsEsm": [".js"],
    "globals": {
      "NODE_OPTIONS": "--experimental-vm-modules"
    },
    "testMatch": ["**/tests/**/*.test.js"]
  },
  "keywords": [
    "blog",
    "nodejs",
    "express",
    "mysql",
    "authentication"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.5"
  },
  "devDependencies": {
    "jest": "^30.0.5",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4"
  }
}
